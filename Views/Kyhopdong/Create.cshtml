 
@model BTL_PTPMQL_NHOM12.Models.Kyhopdong

@{
    ViewData["Title"] = "Create";
}

<h1>Tạo mới</h1>

<h4>Bảng kí hợp đồng</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SoHD" class="control-label"></label>
                <input asp-for="SoHD" class="form-control" value="@ViewBag.newID"/>
                <span asp-validation-for="SoHD" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaQL" class="control-label"></label>
                <select asp-for="MaQL" class ="form-control" asp-items="ViewBag.MaQL"></select>
            </div>
            <div class="form-group">
                <label asp-for="MaKH" class="control-label"></label>
                <select asp-for="MaKH" class ="form-control" asp-items="ViewBag.MaKH"></select>
            </div>
            <div class="form-group">
                <label asp-for="MaDV" class="control-label"></label>
                <select asp-for="MaDV" class ="form-control" asp-items="ViewBag.MaDV"></select>
            </div>
            <div class="form-group">
                <label asp-for="NoiDung" class="control-label"></label>
                <input asp-for="NoiDung" class="form-control" />
                <span asp-validation-for="NoiDung" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiaDiem" class="control-label"></label>
                <input asp-for="DiaDiem" class="form-control" />
                <span asp-validation-for="DiaDiem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NgayKi" class="control-label"></label>
                <input asp-for="NgayKi" class="form-control" />
                <span asp-validation-for="NgayKi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ThoiGianThanhToan" class="control-label"></label>
                <input asp-for="ThoiGianThanhToan" class="form-control" />
                <span asp-validation-for="ThoiGianThanhToan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhuongThucThanhToan" class="control-label"></label>
                <select asp-for="PhuongThucThanhToan" class ="form-control" asp-items="ViewBag.PhuongThucthanhToan"></select>
            </div>
            <div class="form-group">
                <label asp-for="TrachNhiemChung" class="control-label"></label>
                <input asp-for="TrachNhiemChung" class="form-control" />
                <span asp-validation-for="TrachNhiemChung" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Tạo mới" class="btn btn-primary btn-create" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="add_TSX">Trở lại danh sách</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
