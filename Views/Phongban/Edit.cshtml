@model BTL_PTPMQL_NHOM12.Models.Phongban

@{
    ViewData["Title"] = "Edit";
}

<h1>Chỉnh sửa</h1>

<h4>Bảng phòng ban</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
