@model BTL_PTPMQL_NHOM12.Models.Nguoiquanli

@{
    ViewData["Title"] = "Edit";
}

<h1>Chỉnh sửa</h1>

<h4>Bảng người quản lí</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaQL" />
            <div class="form-group">
                <label asp-for="TenQL" class="control-label"></label>
                <input asp-for="TenQL" class="form-control" />
                <span asp-validation-for="TenQL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenPB" class="control-label"></label>
                <select asp-for="TenPB" class="form-control" asp-items="ViewBag.TenPB"></select>
                <span asp-validation-for="TenPB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoTKNQL" class="control-label"></label>
                <input asp-for="SoTKNQL" class="form-control" />
                <span asp-validation-for="SoTKNQL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiaChiNQL" class="control-label"></label>
                <input asp-for="DiaChiNQL" class="form-control" />
                <span asp-validation-for="DiaChiNQL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SDTNQl" class="control-label"></label>
                <input asp-for="SDTNQl" class="form-control" />
                <span asp-validation-for="SDTNQl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailNQL" class="control-label"></label>
                <input asp-for="EmailNQL" class="form-control" />
                <span asp-validation-for="EmailNQL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary btn-create" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="add_TSX">Trở lại danh sách</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
